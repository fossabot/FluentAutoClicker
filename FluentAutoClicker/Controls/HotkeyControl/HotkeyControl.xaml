<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="FluentAutoClicker.HotkeyControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:FluentAutoClicker"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Orientation="Horizontal" Spacing="{StaticResource ButtonColumnSpacing}">
        <TextBox
            x:Name="HotkeyTextBox"
            Grid.Column="0"
            IsEnabled="False"
            IsReadOnly="True"
            Text="F6" />
        <Button x:Uid="HotkeyEditButton" Click="Button_Click">
            <FontIcon Glyph="&#xE70F;" />
        </Button>
        <Button x:Uid="HotkeyCancelButton" Visibility="Collapsed">
            <FontIcon Glyph="&#xE711;" />
        </Button>
        <Button
            x:Uid="HotkeyAcceptButton"
            Style="{StaticResource AccentButtonStyle}"
            Visibility="Collapsed">
            <FontIcon Glyph="&#xE8FB;" />
        </Button>
    </StackPanel>
</UserControl>
